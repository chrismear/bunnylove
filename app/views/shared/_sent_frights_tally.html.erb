<% if sent_frights_count == 0 -%>
  <%
    if live
      messages = [
        "You haven't sent any frights yet! What's the matter? Too scared?",
        "It looks like you haven't sent any frights yet!",
        "I know you've got an evil streak in you &mdash; why not send some frights?"
      ]
  -%>
  <%= messages.sample %>
  <% end -%>
<% else -%>
  <%
    messages = if live then [
      "You've sent #{pluralize(sent_frights_count, 'fright')}. I can hear you cackling as we speak.",
      "Truly, you are wreaking scary havoc this Halloween. You've sent #{pluralize(sent_frights_count, 'fright')}!",
      "You're a scary, scary bunny. You've sent #{pluralize(sent_frights_count, 'fright')}! Can you feel the terror?",
      "You're leaving a trail of nightmares and terror in your wake, with your #{pluralize(sent_frights_count, 'fright')}!"
    ]
    else
    [
      "You sent #{pluralize(sent_frights_count, 'fright')}. I can hear you cackling as we speak.",
      "Truly, you wrought scary havoc this Halloween. You sent #{pluralize(sent_frights_count, 'fright')}!",
      "You're a scary, scary bunny. You sent #{pluralize(sent_frights_count, 'fright')}! Can you still feel the terror?",
      "You left a trail of nightmares and terror in your wake, with your #{pluralize(sent_frights_count, 'fright')}!"
    ]
    end
    %>
  <%= messages.sample %>
<% end -%>
